<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:id="@+id/markdown_toolbar"

        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="长大笔记Markdown编辑"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:layout_width="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="21dp"
                android:id="@+id/markdown_help"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_help_outline_black_48dp"
                android:layout_height="25dp"
                android:contentDescription="TODO">

            </ImageView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/d"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <EditText
                android:textSize="30sp"
                android:minHeight="40dp"
                android:id="@+id/markdown_headline"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="标题"
                android:layout_marginStart="12dp"
                android:layout_height="match_parent" >

            </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:hint="请输入内容........"
            android:textSize="22sp"
            android:gravity="start|clip_vertical"
            android:minHeight="200dp"
            android:background="@drawable/mark_maindraw"
            android:id="@+id/markdown_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=" "
            android:inputType="textMultiLine"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="center_horizontal"
            android:text="上传"
            android:id="@+id/markdown_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
        <CheckBox
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:id="@+id/markdown_ispublic"
            android:text="公开"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>
    </LinearLayout>
</LinearLayout>
