<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#FFE6E6E6"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInformation">
       <LinearLayout
           android:background="#F7F7F7"
           android:addStatesFromChildren="true"
           android:id="@+id/changeavater"
           android:layout_width="match_parent"
           android:layout_height="60dp">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:gravity="center"
                   android:textColor="#000000"
                   android:layout_centerVertical="true"
                   android:textSize="22sp"
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:layout_marginStart="26dp"
                   android:text="更换头像">
               </TextView>
               <ImageView
                   android:layout_centerVertical="true"
                   android:layout_alignParentEnd="true"
                   android:src="@drawable/ic_keyboard_arrow_right_black_48dp"
                   android:layout_width="30dp"
                   android:layout_marginEnd="20dp"
                   android:layout_height="30dp">
               </ImageView>
           </RelativeLayout>
       </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#F7F7F7"
        android:addStatesFromChildren="true"
        android:id="@+id/changeemail"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:text="更改密码">
            </TextView>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_48dp"
                android:layout_width="30dp"
                android:layout_marginEnd="20dp"
                android:layout_height="30dp">
            </ImageView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#F7F7F7"
        android:addStatesFromChildren="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:text="组别设置">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:id="@+id/change_user_ingormation_group"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:id="@+id/changeqroup"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_48dp"
                android:layout_width="30dp"
                android:layout_marginEnd="20dp"
                android:layout_height="30dp">
            </ImageView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#F7F7F7"
        android:addStatesFromChildren="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:text="开启隐私">
            </TextView>
            <Switch
                android:id="@+id/openPrivacy"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_48dp"
                android:layout_width="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_height="30dp">
            </Switch>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>