<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:background="#F1EFEF"
        android:layout_width="match_parent"
        android:id="@+id/main_toobar"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/main_toobar_touxiang"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/touxiang" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
              android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textColor="#F8F7F7"
                android:textSize="20sp"
                android:text="文档">

            </TextView>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_notifications_black_48dp"
                android:layout_width="36dp"
                android:layout_height="36dp">

            </ImageView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/kejian"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下拉刷新"
            android:textSize="12sp"
            android:textColor="#7A7171">

        </TextView>
        <TextView
            android:id="@+id/kejianshuju"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有更多数据了......"
            android:textSize="12sp"
            android:textColor="#7A7171">

        </TextView>
    </FrameLayout>

 <FrameLayout
     android:background="#FFE6E6E6"
     android:layout_width="match_parent"
     android:layout_height="70dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:background="#F7F7F7"
               android:addStatesFromChildren="true"
               android:layout_alignParentBottom="true"
               android:id="@+id/main_l2"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:baselineAligned="false">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/main_wendang"
                   android:layout_marginTop="2dp"
                   android:layout_marginBottom="3dp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <de.hdodenhof.circleimageview.CircleImageView
                           android:layout_width="27dp"
                           android:layout_height="27dp"
                           android:id="@+id/gailan"
                           android:layout_centerHorizontal="true"
                           android:background="@drawable/calender">

                       </de.hdodenhof.circleimageview.CircleImageView>
                       <TextView
                           android:text="文档"
                           android:layout_centerHorizontal="true"
                           android:textSize="14sp"
                           android:layout_below="@id/gailan"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           />
                   </RelativeLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:id="@+id/main_paiming"
                   android:layout_weight="1"
                   android:layout_gravity="bottom"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       tools:ignore="UselessParent">
                       <de.hdodenhof.circleimageview.CircleImageView
                           android:layout_width="28dp"
                           android:layout_height="28dp"
                           android:id="@+id/user"
                           android:layout_centerHorizontal="true"
                           android:background="@drawable/ic_account_circle_black_48dp">

                       </de.hdodenhof.circleimageview.CircleImageView>

                       <TextView
                           android:layout_centerHorizontal="true"
                           android:layout_below="@id/user"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="#0000"
                           android:text="我"
                           android:textSize="14sp" />
                   </RelativeLayout>
               </LinearLayout>


           </LinearLayout>
           <ImageView
               android:layout_centerHorizontal="true"
               android:id="@+id/add"
               android:background="@drawable/add"
               android:layout_width="73dp"
               android:layout_height="76dp">

           </ImageView>
       </RelativeLayout>
 </FrameLayout>
</LinearLayout>