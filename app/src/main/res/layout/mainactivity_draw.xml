<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_above="@id/user_name_draw"
            android:id="@+id/user_icon_draw"
            android:layout_centerHorizontal="true"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/touxiang"
            >
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:text="运维组"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/user_group_draw"
            android:textColor="#000000"
            android:id="@+id/user_name_draw"
            android:textSize="18sp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="赵乾"
            android:id="@+id/user_group_draw"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
      <LinearLayout
          android:layout_centerHorizontal="true"
          android:layout_alignParentBottom="true"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          >
          <TextView
              android:id="@+id/userloadmode_draw"
              android:text="当前状态:本周未提交"
              android:textColor="#E53935"
              android:layout_marginStart="7dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

          </TextView>
      </LinearLayout>

    </RelativeLayout>
  <LinearLayout
      android:layout_marginTop="15dp"
      android:background="#EEEEEE"
      android:addStatesFromChildren="true"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:id="@+id/change_user_ingormation_draw"
          android:layout_marginTop="40dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:textSize="18sp"
              android:textColor="#000000"
              android:layout_gravity="center_horizontal"
              android:text="个人信息"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
          </TextView>
      </LinearLayout>
      <LinearLayout
          android:layout_marginTop="20dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:textSize="18sp"
              android:textColor="#000000"
              android:layout_gravity="center_horizontal"
              android:text="更换主题"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
          </TextView>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/historyHanding_draw"
          android:layout_marginTop="20dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:textSize="18sp"
              android:textColor="#000000"
              android:layout_gravity="center_horizontal"
              android:text="我的提交"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
          </TextView>
      </LinearLayout>
      <LinearLayout
          android:layout_marginTop="20dp"
          android:orientation="vertical"
          android:layout_marginBottom="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:textSize="18sp"
              android:textColor="#000000"
              android:layout_gravity="center_horizontal"
              android:text="管理员登陆"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
          </TextView>
      </LinearLayout>
  </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">
   <LinearLayout
       android:layout_marginEnd="20dp"
       android:id="@+id/main_drawlayout_quit"
       android:layout_width="wrap_content"
       android:layout_height="match_parent">
       <ImageView
           android:src="@drawable/quitaccount"
           android:layout_marginStart="12dp"
           android:layout_width="25dp"
           android:layout_height="25dp">
       </ImageView>
       <TextView
           android:layout_marginStart="2dp"
           android:layout_gravity="center_vertical"
           android:text="退出登录"
           android:textColor="#000000"
           android:textSize="17sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

       </TextView>
   </LinearLayout>
        <LinearLayout
            android:layout_marginEnd="18dp"
            android:id="@+id/main_drawlayout_nightmode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/moon"
                android:layout_marginStart="12dp"
                android:layout_width="25dp"
                android:layout_height="25dp">
            </ImageView>
            <TextView
                android:layout_marginStart="2dp"
                android:layout_gravity="center_vertical"
                android:text="关灯/夜间模式"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>